{
  "version": 2,
  "functions": {
    "api/server.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    { "src": "/todos(.*)", "dest": "/api/server.js" },
    { "src": "/api/(.*)", "dest": "/api/server.js" },
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}